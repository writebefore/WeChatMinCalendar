/* components/calendar/calendar.wxss */
.calendar{
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}

.calendar-title{
    display: flex;
    padding: 0 40rpx;
    justify-content: space-between;
    height: 70rpx;
    align-items: center;
}

.calendar-title .item{
    padding: 10rpx;
    background-color: #f5f5f5;
    border-radius: 10rpx;
}

.calendar-title .ctrl{
    flex: 0.1 1 auto;

}

.calendar-title .today{
    justify-self: end;
}

.calendar-week{
    display: flex;
    text-align: center;
    justify-content: space-around;
    background-color: #f5f5f5;
    padding: 30rpx 10rpx;
    border-top: 1rpx solid #e0e0e0;
    border-bottom: 1rpx solid #e0e0e0;
}

/* 日期 */
.calendar-container{
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 10rpx;
}

.calendar-container .grid{
    display: inline-block;
    width: 14.2%;
    line-height: 70rpx;
    position: relative;
    z-index: 1;
}

.calendar-container .grid.gray{
    color: #ccc;
}

.calendar-container  .grid .wrap.select{
    background-color: rgba(48,120,228);
    border-radius: 10rpx;
    color: #fff;  
}